{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["ES2017", "DOM"],
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": ".",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["ui.ts"],
  "exclude": ["node_modules", "dist", "code.ts", "scan-engine.ts", "db.ts", "exporter.ts", "types.ts"]
}
